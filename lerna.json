{
  "version": "4.0.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "bump": "patch",
      "conventionalCommits": true,
      "ignoreChanges": [
        "CHANGELOG.md"
      ],
      "message": "chore(release): publish %s"
    }
  },
  "registry": "http://localhost:4873",
  "loglevel": "success"
}
