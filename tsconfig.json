{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "types": [
      "node",
      "jest",
      "express"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/test",
    "**/__tests__",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "core/commons-api"
    },
    {
      "path": "core/file-locking"
    },
    {
      "path": "core/readme"
    },
    {
      "path": "core/streams"
    },
    {
      "path": "core/types"
    },
    {
      "path": "plugins/active-directory"
    },
    {
      "path": "plugins/audit"
    },
    {
      "path": "plugins/auth-memory"
    },
    {
      "path": "plugins/aws-s3-storage"
    },
    {
      "path": "plugins/google-cloud"
    },
    {
      "path": "plugins/htpasswd"
    },
    {
      "path": "plugins/local-storage"
    },
    {
      "path": "plugins/memory"
    }
  ]
}
