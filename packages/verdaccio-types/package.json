{
  "name": "@verdaccio/types",
  "version": "4.0.0",
  "description": "verdaccio flow types definitions",
  "main": "lib/types.js.flow",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint .",
    "prepare": "npm run build",
    "format": "prettier --write",
    "release": "standard-version -a -s",
    "build": "mkdir -p lib && for f in $(find src/ -iname *.js | cut -c5-) ; do cp src/$f lib/$f.flow; done",
    "test": "npm run lint && flow check"
  },
  "keywords": [
    "flow-type",
    "verdaccio"
  ],
  "author": "Juan Picado <juanpicado19@gmail.com>",
  "private": false,
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-flow-typed": "^1.0.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "0.78.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.9.2",
    "standard-version": "4.4.0"
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  }
}
